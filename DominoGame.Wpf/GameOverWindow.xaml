
<Window x:Class="DominoGame.Wpf.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Over"
        Width="620"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="Assets/Images/Logo.png"
        Background="#0E2E2F">
    
    <Grid>
        
        <Border Width="520"
                Padding="24"
                Background="#123B3D"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                
                <TextBlock Text="Game Over"
                           Foreground="#F1F7F6"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="{Binding WinnerName}"
                           Foreground="#F2D06B"
                           FontSize="18"
                           Margin="0,6,0,18"
                           HorizontalAlignment="Center"/>

                
                <Border Background="#184B4E" CornerRadius="10" Padding="12">
                    <StackPanel>
                        
                        <TextBlock Text="Skor Akhir"
                                   Foreground="#DFF3F1"
                                   FontWeight="Bold"
                                   Margin="0,0,0,8"/>
                        
                        <ItemsControl ItemsSource="{Binding Players}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            
                                            <ColumnDefinition Width="*"/>
                                            
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="#F1F7F6"/>
                                        
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Score}"
                                                   Foreground="#F2D06B"
                                                   FontWeight="Bold"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,18,0,0">
                    
                    <Button Content="Main Lagi"
                            Width="120"
                            Height="38"
                            Margin="0,0,10,0"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="PlayAgain_Click"/>
                    
                    <Button Content="Close The Game"
                            Width="160"
                            Height="38"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="Exit_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>

