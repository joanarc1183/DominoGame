
<Window x:Class="DominoGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DominoGame.Wpf"
        xmlns:ctrl="clr-namespace:DominoGame.Wpf.Controls"
        Title="Domino Game"
        Width="980"
        Height="640"
        Background="#0E2E2F">

    <Window.DataContext>
        <vm:GameViewModel/>
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Padding="12"
                Background="#123B3D"
                CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#F1F7F6"
                           FontSize="14"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Boneyard:"
                               Foreground="#CDE5E3"
                               Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding BoneyardCount}"
                               Foreground="#F1F7F6"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Margin="0,18,0,18"
                Background="#184B4E"
                CornerRadius="14"
                Padding="16">
            <StackPanel>
                <TextBlock Text="Board"
                           Foreground="#DFF3F1"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <ItemsControl ItemsSource="{Binding BoardDominoes}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ctrl:DominoTileControl/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                    <Button Content="Place Left"
                            Command="{Binding PlaceLeftCommand}"
                            Margin="0,0,8,0"
                            Padding="12,6"/>
                    <Button Content="Place Right"
                            Command="{Binding PlaceRightCommand}"
                            Margin="0,0,8,0"
                            Padding="12,6"/>
                    <Button Content="Draw"
                            Command="{Binding DrawCommand}"
                            Padding="12,6"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Grid.Row="2"
                Background="#123B3D"
                CornerRadius="12"
                Padding="12">
            <StackPanel>
                <TextBlock Text="Your Hand"
                           Foreground="#DFF3F1"
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>

                <ItemsControl ItemsSource="{Binding PlayerHand}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border CornerRadius="8"
                                    BorderThickness="2"
                                    Margin="4"
                                    Padding="2">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="BorderBrush" Value="#F2D06B"/>
                                                <Setter Property="Background" Value="#2E5B55"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                                                <Setter Property="Opacity" Value="0.45"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Button Command="{Binding DataContext.SelectDominoCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Padding="0"
                                        BorderThickness="0"
                                        Background="Transparent">
                                    <ctrl:DominoTileControl/>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>
