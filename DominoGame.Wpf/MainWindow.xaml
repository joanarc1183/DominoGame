<!-- Window: x:Class mengikat code-behind, xmlns/ xmlns:x untuk namespace XAML,
     xmlns:vm untuk akses view model, xmlns:ctrl untuk akses custom control,
     Title judul, Width/Height ukuran, Background warna latar. -->
<Window x:Class="DominoGame.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:DominoGame.Wpf"
        xmlns:ctrl="clr-namespace:DominoGame.Wpf.Controls"
        Title="Domino Game"
        Width="980"
        Height="640"
        Background="#0E2E2F">

    <Window.Resources>
        <!-- DataTemplate: x:Key untuk tile tangan horizontal. -->
        <DataTemplate x:Key="HandTileTemplateHorizontal">
            <!-- Grid: x:Name dipakai trigger, Margin jarak antar tile. -->
            <Grid x:Name="TileRoot" Margin="3">
                <!-- Grid: x:Name area tampilan face-up. -->
                <Grid x:Name="FaceUpRoot">
                    <ctrl:DominoTileControl/>
                </Grid>
                <!-- Border: x:Name area face-down, Width/Height ukuran tile, BorderThickness/Brush garis,
                     Background warna belakang, CornerRadius sudut. -->
                <Border x:Name="FaceDownRoot"
                        Width="35"
                        Height="70"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Background="#F1F7F6"
                        CornerRadius="4"/>
            </Grid>
            <DataTemplate.Triggers>
                <!-- DataTrigger: Binding ke IsCurrent pemain, Value True menampilkan face-up. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Visible"/>
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <!-- DataTrigger: Binding ke IsCurrent pemain, Value False menampilkan face-down. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Collapsed"/>
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <!-- DataTrigger: Binding ke IsPlayable, Value False membuat tile transparan. -->
                <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="TileRoot" Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- DataTemplate: x:Key untuk tile tangan vertikal. -->
        <DataTemplate x:Key="HandTileTemplateVertical">
            <!-- Grid: x:Name dipakai trigger, Margin jarak antar tile. -->
            <Grid x:Name="TileRoot" Margin="3">
                <Grid.LayoutTransform>
                    <!-- RotateTransform: Angle 90 derajat untuk tile vertikal. -->
                    <RotateTransform Angle="90"/>
                </Grid.LayoutTransform>
                <!-- Grid: x:Name area tampilan face-up. -->
                <Grid x:Name="FaceUpRoot">
                    <ctrl:DominoTileControl/>
                </Grid>
                <!-- Border: x:Name area face-down, Width/Height ukuran tile, BorderThickness/Brush garis,
                     Background warna belakang, CornerRadius sudut. -->
                <Border x:Name="FaceDownRoot"
                        Width="35"
                        Height="70"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Background="#F1F7F6"
                        CornerRadius="4"/>
            </Grid>
            <DataTemplate.Triggers>
                <!-- DataTrigger: Binding ke IsCurrent pemain, Value True menampilkan face-up. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Visible"/>
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <!-- DataTrigger: Binding ke IsCurrent pemain, Value False menampilkan face-down. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Collapsed"/>
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <!-- DataTrigger: Binding ke IsPlayable, Value False membuat tile transparan. -->
                <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                    <!-- Setter: TargetName elemen yang diubah, Property properti yang diubah, Value nilai baru. -->
                    <Setter TargetName="TileRoot" Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- DataTemplate: x:Key untuk menampilkan tangan pemain secara horizontal. -->
        <DataTemplate x:Key="PlayerHandHorizontalTemplate">
            <!-- ItemsControl: ItemsSource binding ke Hand, ItemTemplate memakai tile horizontal. -->
            <ItemsControl ItemsSource="{Binding Hand}" ItemTemplate="{StaticResource HandTileTemplateHorizontal}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- StackPanel: Orientation horizontal untuk berjajar. -->
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <!-- Style: TargetType ContentPresenter untuk hook event drag dari tile. -->
                    <Style TargetType="ContentPresenter">
                        <!-- EventSetter: Event mouse down untuk mulai drag tile. -->
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="HandTile_PreviewMouseLeftButtonDown"/>
                        <!-- EventSetter: Event mouse move untuk melanjutkan drag tile. -->
                        <EventSetter Event="PreviewMouseMove" Handler="HandTile_PreviewMouseMove"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </DataTemplate>

        <!-- DataTemplate: x:Key untuk menampilkan tangan pemain secara vertikal. -->
        <DataTemplate x:Key="PlayerHandVerticalTemplate">
            <!-- ItemsControl: ItemsSource binding ke Hand, ItemTemplate memakai tile vertikal. -->
            <ItemsControl ItemsSource="{Binding Hand}" ItemTemplate="{StaticResource HandTileTemplateVertical}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- StackPanel: Orientation vertical untuk berjajar. -->
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <!-- Style: TargetType ContentPresenter untuk hook event drag dari tile. -->
                    <Style TargetType="ContentPresenter">
                        <!-- EventSetter: Event mouse down untuk mulai drag tile. -->
                        <EventSetter Event="PreviewMouseLeftButtonDown" Handler="HandTile_PreviewMouseLeftButtonDown"/>
                        <!-- EventSetter: Event mouse move untuk melanjutkan drag tile. -->
                        <EventSetter Event="PreviewMouseMove" Handler="HandTile_PreviewMouseMove"/>
                    </Style>
                </ItemsControl.ItemContainerStyle>
            </ItemsControl>
        </DataTemplate>
    </Window.Resources>

    <!-- Grid: Margin memberi ruang di sekeliling layout utama. -->
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <!-- ColumnDefinition: Width * untuk area game utama. -->
            <ColumnDefinition Width="*"/>
            <!-- ColumnDefinition: Width 240 untuk panel skor. -->
            <ColumnDefinition Width="240"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <!-- RowDefinition: Height Auto untuk banner status. -->
            <RowDefinition Height="Auto"/>
            <!-- RowDefinition: Height * untuk area permainan. -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Border: Grid.Row header, Grid.ColumnSpan melebar dua kolom, Padding jarak dalam,
             Background warna panel, CornerRadius sudut. -->
        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Padding="12"
                Background="#123B3D"
                CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- ColumnDefinition: Width * untuk status message. -->
                    <ColumnDefinition Width="*"/>
                    <!-- ColumnDefinition: Width Auto untuk panel info giliran. -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TextBlock: Text binding status, Foreground warna, FontSize ukuran, VerticalAlignment tengah. -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#F1F7F6"
                           FontSize="14"
                           VerticalAlignment="Center"/>

                <!-- StackPanel: Grid.Column kanan, Orientation horizontal, VerticalAlignment tengah. -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- TextBlock: Text label Turn, Foreground warna, Margin jarak kanan. -->
                    <TextBlock Text="Turn:"
                               Foreground="#CDE5E3"
                               Margin="0,0,6,0"/>
                    <!-- TextBlock: Text binding nama pemain, Foreground warna, FontWeight tebal, Margin jarak kanan. -->
                    <TextBlock Text="{Binding CurrentPlayerName}"
                               Foreground="#F1F7F6"
                               FontWeight="Bold"
                               Margin="0,0,12,0"/>
                    <!-- TextBlock: Text label Score, Foreground warna, Margin jarak kanan. -->
                    <TextBlock Text="Score:"
                               Foreground="#CDE5E3"
                               Margin="0,0,6,0"/>
                    <!-- TextBlock: Text binding skor pemain, Foreground warna, FontWeight tebal. -->
                    <TextBlock Text="{Binding CurrentPlayerScore}"
                               Foreground="#F1F7F6"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Border: Grid.Row area game, Grid.Column kiri, Margin atas/bawah, Background warna,
             CornerRadius sudut, Padding jarak dalam. -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Margin="0,18,0,18"
                Background="#184B4E"
                CornerRadius="14"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- RowDefinition: Height Auto untuk tangan atas. -->
                    <RowDefinition Height="Auto"/>
                    <!-- RowDefinition: Height * untuk board tengah. -->
                    <RowDefinition Height="*"/>
                    <!-- RowDefinition: Height Auto untuk tangan bawah. -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- ColumnDefinition: Width Auto untuk tangan kiri. -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- ColumnDefinition: Width * untuk area board. -->
                    <ColumnDefinition Width="*"/>
                    <!-- ColumnDefinition: Width Auto untuk tangan kanan. -->
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ContentControl: Grid.Row atas, Grid.Column tengah, Content binding TopPlayer,
                     ContentTemplate memakai template tangan horizontal. -->
                <ContentControl Grid.Row="0"
                                Grid.Column="1"
                                Content="{Binding TopPlayer}"
                                ContentTemplate="{StaticResource PlayerHandHorizontalTemplate}"/>

                <!-- ContentControl: Grid.Row bawah, Grid.Column tengah, Content binding BottomPlayer,
                     ContentTemplate memakai template tangan horizontal. -->
                <ContentControl Grid.Row="2"
                                Grid.Column="1"
                                Content="{Binding BottomPlayer}"
                                ContentTemplate="{StaticResource PlayerHandHorizontalTemplate}"/>

                <!-- ContentControl: Grid.Row tengah, Grid.Column kiri, Content binding LeftPlayer,
                     ContentTemplate memakai template tangan vertical. -->
                <ContentControl Grid.Row="1"
                                Grid.Column="0"
                                Content="{Binding LeftPlayer}"
                                ContentTemplate="{StaticResource PlayerHandVerticalTemplate}"/>

                <!-- ContentControl: Grid.Row tengah, Grid.Column kanan, Content binding RightPlayer,
                     ContentTemplate memakai template tangan vertical. -->
                <ContentControl Grid.Row="1"
                                Grid.Column="2"
                                Content="{Binding RightPlayer}"
                                ContentTemplate="{StaticResource PlayerHandVerticalTemplate}"/>

                <!-- Border: Grid.Row tengah, Grid.Column tengah, Background warna area board,
                     CornerRadius sudut, Padding jarak dalam, Margin jarak luar. -->
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Background="#1B4F52"
                        CornerRadius="12"
                        Padding="12"
                        Margin="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- RowDefinition: Height Auto untuk judul board. -->
                            <RowDefinition Height="Auto"/>
                            <!-- RowDefinition: Height * untuk area board. -->
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- TextBlock: Text label board, Foreground warna, FontWeight tebal, Margin bawah. -->
                        <TextBlock Text="Board"
                                   Foreground="#DFF3F1"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <!-- Grid: Grid.Row area board, HorizontalAlignment/VerticalAlignment center. -->
                        <Grid Grid.Row="1"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <!-- ColumnDefinition: Width Auto untuk drop zone kiri. -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- ColumnDefinition: Width Auto untuk board domino. -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- ColumnDefinition: Width Auto untuk drop zone kanan. -->
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Border: x:Name drop kiri, Width lebar, Margin jarak kanan, Background warna,
                                 CornerRadius sudut, Padding jarak dalam, AllowDrop enable drop,
                                 DragOver handler, Drop handler. -->
                            <Border x:Name="DropLeftZone"
                                    Width="60"
                                    Margin="0,0,4,0"
                                    Background="#123B3D"
                                    CornerRadius="8"
                                    Padding="4"
                                    AllowDrop="True"
                                    DragOver="DropZone_DragOver"
                                    Drop="DropLeftZone_Drop">
                                <!-- TextBlock: Text label, Foreground warna, FontSize ukuran, alignment center. -->
                                <TextBlock Text="Left"
                                           Foreground="#CDE5E3"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>

                            <!-- ItemsControl: Grid.Column tengah, ItemsSource binding BoardDominoes,
                                 Width/Height ukuran area, alignment center. -->
                            <ItemsControl Grid.Column="1"
                                          ItemsSource="{Binding BoardDominoes}"
                                          Width="520"
                                          Height="300"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <!-- OShapePanel: Padding memberi jarak di area board. -->
                                        <ctrl:OShapePanel Padding="8"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ctrl:DominoTileControl/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Border: x:Name drop kanan, Grid.Column kanan, Width lebar, Margin jarak kiri,
                                 Background warna, CornerRadius sudut, Padding jarak dalam, AllowDrop enable drop,
                                 DragOver handler, Drop handler. -->
                            <Border x:Name="DropRightZone"
                                    Grid.Column="2"
                                    Width="60"
                                    Margin="4,0,0,0"
                                    Background="#123B3D"
                                    CornerRadius="8"
                                    Padding="4"
                                    AllowDrop="True"
                                    DragOver="DropZone_DragOver"
                                    Drop="DropRightZone_Drop">
                                <!-- TextBlock: Text label, Foreground warna, FontSize ukuran, alignment center. -->
                                <TextBlock Text="Right"
                                           Foreground="#CDE5E3"
                                           FontSize="12"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Border: Grid.Row area skor, Grid.Column kanan, Margin kiri/atas/bawah,
             Background warna panel, CornerRadius sudut, Padding jarak dalam. -->
        <Border Grid.Row="1"
                Grid.Column="1"
                Margin="16,18,0,18"
                Background="#123B3D"
                CornerRadius="12"
                Padding="12">
            <StackPanel>
                <!-- TextBlock: Text label scoreboard, Foreground warna, FontWeight tebal, Margin bawah. -->
                <TextBlock Text="Scoreboard"
                           Foreground="#DFF3F1"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <!-- ItemsControl: ItemsSource binding daftar pemain. -->
                <ItemsControl ItemsSource="{Binding Players}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Grid: Margin bawah untuk jarak antar pemain. -->
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <!-- ColumnDefinition: Width * untuk nama pemain. -->
                                    <ColumnDefinition Width="*"/>
                                    <!-- ColumnDefinition: Width Auto untuk skor. -->
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- TextBlock: Text binding nama pemain, Style mengatur highlight pemain aktif. -->
                                <TextBlock Text="{Binding Name}">
                                    <TextBlock.Style>
                                        <!-- Style: TargetType TextBlock untuk mengatur tampilan nama pemain. -->
                                        <Style TargetType="TextBlock">
                                            <!-- Setter: Property Foreground, Value warna default nama pemain. -->
                                            <Setter Property="Foreground" Value="#F1F7F6"/>
                                            <Style.Triggers>
                                                <!-- DataTrigger: Binding IsCurrent True, ubah warna dan font tebal. -->
                                                <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                    <!-- Setter: Property Foreground, Value warna highlight pemain aktif. -->
                                                    <Setter Property="Foreground" Value="#F2D06B"/>
                                                    <!-- Setter: Property FontWeight, Value tebal untuk pemain aktif. -->
                                                    <Setter Property="FontWeight" Value="Bold"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <!-- TextBlock: Grid.Column kanan, Text binding skor, Foreground warna, FontWeight tebal. -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding Score}"
                                           Foreground="#F2D06B"
                                           FontWeight="Bold"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</Window>
