<Window x:Class="DominoGame.Wpf.PauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pause"
        Width="360"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="Assets/Images/Logo.png"
        Background="#0E2E2F">
    <Border Margin="16"
            Background="#123B3D"
            CornerRadius="12"
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Game Paused"
                       Foreground="#F1F7F6"
                       FontSize="18"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1"
                       Margin="0,12,0,0"
                       Text="Resume to continue or end the game."
                       Foreground="#CDE5E3"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,16,0,0">
                <Button Width="110"
                        Height="34"
                        Margin="0,0,8,0"
                        Content="Resume"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Resume_Click"/>
                <Button Width="110"
                        Height="34"
                        Content="End"
                        Style="{StaticResource DangerButtonStyle}"
                        Click="Exit_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
