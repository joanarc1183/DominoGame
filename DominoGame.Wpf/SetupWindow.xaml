<!-- Window: x:Class mengikat code-behind, xmlns/ xmlns:x untuk namespace XAML,
     Title judul window, Width/Height ukuran, WindowStartupLocation posisi awal,
     Background warna latar, ResizeMode mencegah resize. -->
<Window x:Class="DominoGame.Wpf.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Domino Setup"
        Width="480"
        Height="480"
        WindowStartupLocation="CenterScreen"
        Background="#0E2E2F"
        ResizeMode="NoResize">

    <!-- Grid: Margin memberi ruang di sekeliling konten. -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- RowDefinition: Height Auto untuk header. -->
            <RowDefinition Height="Auto"/>
            <!-- RowDefinition: Height * untuk area input utama. -->
            <RowDefinition Height="*"/>
            <!-- RowDefinition: Height Auto untuk footer tombol. -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- StackPanel: Grid.Row menempatkan di baris header, Margin memberi jarak bawah. -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <!-- TextBlock: Text judul, Foreground warna, FontSize ukuran, FontWeight tebal. -->
            <TextBlock Text="Domino Game"
                       Foreground="#F1F7F6"
                       FontSize="22"
                       FontWeight="Bold"/>
            <!-- TextBlock: Text deskripsi, Foreground warna, Margin jarak atas. -->
            <TextBlock Text="Pilih target skor dan jumlah pemain, kemudian isi nama pemain."
                       Foreground="#CDE5E3"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <!-- Border: Grid.Row area utama, Background warna panel, CornerRadius sudut, Padding jarak dalam. -->
        <Border Grid.Row="1"
                Background="#123B3D"
                CornerRadius="12"
                Padding="12">
            <StackPanel>
                <!-- Grid: Margin jarak bawah untuk blok pilihan. -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <!-- ColumnDefinition: Width * membagi dua kolom sama lebar. -->
                        <ColumnDefinition Width="*"/>
                        <!-- ColumnDefinition: Width * membagi dua kolom sama lebar. -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- StackPanel: Margin memberi jarak kanan untuk kolom kiri. -->
                    <StackPanel Margin="0,0,8,0">
                        <!-- TextBlock: Text label, Foreground warna, Margin jarak bawah. -->
                        <TextBlock Text="Target skor"
                                   Foreground="#DFF3F1"
                                   Margin="0,0,0,6"/>
                        <!-- ComboBox: x:Name dipakai di code-behind, SelectedIndex default, Width lebar. -->
                        <ComboBox x:Name="ScoreTargetCombo"
                                  SelectedIndex="1"
                                  Width="140">
                            <!-- ComboBoxItem: Content nilai opsi skor. -->
                            <ComboBoxItem Content="50"/>
                            <!-- ComboBoxItem: Content nilai opsi skor. -->
                            <ComboBoxItem Content="100"/>
                            <!-- ComboBoxItem: Content nilai opsi skor. -->
                            <ComboBoxItem Content="150"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- StackPanel: Grid.Column menempatkan di kolom kanan, Margin memberi jarak kiri. -->
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <!-- TextBlock: Text label, Foreground warna, Margin jarak bawah. -->
                        <TextBlock Text="Jumlah pemain"
                                   Foreground="#DFF3F1"
                                   Margin="0,0,0,6"/>
                        <!-- ComboBox: x:Name dipakai di code-behind, SelectedIndex default, Width lebar. -->
                        <ComboBox x:Name="PlayerCountCombo"
                                  SelectedIndex="0"
                                  Width="140">
                            <!-- ComboBoxItem: Content nilai opsi jumlah pemain. -->
                            <ComboBoxItem Content="2"/>
                            <!-- ComboBoxItem: Content nilai opsi jumlah pemain. -->
                            <ComboBoxItem Content="3"/>
                            <!-- ComboBoxItem: Content nilai opsi jumlah pemain. -->
                            <ComboBoxItem Content="4"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- TextBlock: Text label, Foreground warna, Margin jarak bawah. -->
                <TextBlock Text="Nama pemain"
                           Foreground="#DFF3F1"
                           Margin="0,0,0,6"/>

                <!-- StackPanel: x:Name dipakai code-behind untuk menambah input pemain. -->
                <StackPanel x:Name="PlayersPanel"/>
            </StackPanel>
        </Border>

        <!-- StackPanel: Grid.Row baris footer, Orientation horizontal, HorizontalAlignment kanan, Margin jarak atas. -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <!-- Button: Content label, Width lebar, Margin jarak kanan, Padding ruang dalam, Click handler batal. -->
            <Button Content="Cancel"
                    Width="90"
                    Margin="0,0,8,0"
                    Padding="10,6"
                    Click="Cancel_Click"/>
            <!-- Button: Content label, Width lebar, Padding ruang dalam, Click handler mulai game. -->
            <Button Content="Start Game"
                    Width="120"
                    Padding="10,6"
                    Click="Start_Click"/>
        </StackPanel>
    </Grid>
</Window>
