
<Window x:Class="DominoGame.Wpf.StartMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Domino Block Game"
        Width="520"
        Height="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="Assets/Images/Logo.png"
        Background="#0E2E2F">
    
    <Grid>
        
        <Border Width="420"
                Padding="26"
                Background="#123B3D"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                <Image Source="Assets/Images/Domino.png"
                       Height="90"
                       Margin="0,0,0,12"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"/>
                
                <TextBlock Text="Domino Block Game"
                           Foreground="#F1F7F6"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Free Dominoes game. Let's Play!"
                           Foreground="#CDE5E3"
                           Margin="0,8,0,20"
                           HorizontalAlignment="Center"/>

                
                <Button Content="Start Game"
                        Height="42"
                        Margin="0,0,0,10"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Start_Click"/>
                
                <Button Content="Exit"
                        Height="42"
                        Style="{StaticResource DangerButtonStyle}"
                        Click="Exit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

