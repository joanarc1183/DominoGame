
<UserControl x:Class="DominoGame.Wpf.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:DominoGame.Wpf.Controls"
             Background="#0E2E2F"
             AllowDrop="True"
             PreviewDragOver="GameView_PreviewDragOver">

    <UserControl.Resources>
        
        <DataTemplate x:Key="HandTileTemplateHorizontal">
            <Grid x:Name="TileRoot" Margin="3">
                <Grid x:Name="FaceUpRoot">
                    <ctrl:DominoTileControl/>
                </Grid>
                <Border x:Name="FaceDownRoot"
                        Width="35"
                        Height="70"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Background="#F1F7F6"
                        CornerRadius="4"/>
            </Grid>
            <DataTemplate.Triggers>
                
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                
                <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                    <Setter TargetName="TileRoot" Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        
        <DataTemplate x:Key="HandTileGhostHorizontal">
            <Grid Margin="3">
                <ctrl:DominoTileControl/>
            </Grid>
        </DataTemplate>

        
        <DataTemplate x:Key="HandTileTemplateVertical">
            <Grid x:Name="TileRoot" Margin="3">
                <Grid.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Grid.LayoutTransform>
                <Grid x:Name="FaceUpRoot">
                    <ctrl:DominoTileControl/>
                </Grid>
                <Border x:Name="FaceDownRoot"
                        Width="35"
                        Height="70"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Background="#F1F7F6"
                        CornerRadius="4"/>
            </Grid>
            <DataTemplate.Triggers>
                
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                
                <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                    <Setter TargetName="TileRoot" Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        
        <DataTemplate x:Key="HandTileGhostVertical">
            <Grid Margin="3">
                <Grid.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Grid.LayoutTransform>
                <ctrl:DominoTileControl/>
            </Grid>
        </DataTemplate>

        
        <DataTemplate x:Key="PlayerHandHorizontalTemplate">
            <ItemsControl ItemsSource="{Binding Hand}"
                          ItemTemplate="{StaticResource HandTileTemplateHorizontal}"
                          PreviewMouseLeftButtonDown="HandItems_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="HandItems_PreviewMouseMove">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>

        
        <DataTemplate x:Key="PlayerHandVerticalTemplate">
            <ItemsControl ItemsSource="{Binding Hand}"
                          ItemTemplate="{StaticResource HandTileTemplateVertical}"
                          PreviewMouseLeftButtonDown="HandItems_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="HandItems_PreviewMouseMove">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>

        
        <DataTemplate x:Key="TopPlayerSlotTemplate">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding Name}"
                           Foreground="#F1F7F6"
                           FontWeight="Bold"
                           Margin="0,0,0,6"
                           HorizontalAlignment="Center"/>
                <ContentPresenter Content="{Binding}"
                                  ContentTemplate="{StaticResource PlayerHandHorizontalTemplate}"/>
            </StackPanel>
        </DataTemplate>

        
        <DataTemplate x:Key="BottomPlayerSlotTemplate">
            <StackPanel HorizontalAlignment="Center">
                <ContentPresenter Content="{Binding}"
                                  ContentTemplate="{StaticResource PlayerHandHorizontalTemplate}"/>
                <TextBlock Text="{Binding Name}"
                           Foreground="#F1F7F6"
                           FontWeight="Bold"
                           Margin="0,6,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>

        
        <DataTemplate x:Key="LeftPlayerSlotTemplate">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding Name}"
                           Foreground="#F1F7F6"
                           FontWeight="Bold"
                           Margin="0,0,0,6"
                           HorizontalAlignment="Center"/>
                <ContentPresenter Content="{Binding}"
                                  ContentTemplate="{StaticResource PlayerHandVerticalTemplate}"/>
            </StackPanel>
        </DataTemplate>

        
        <DataTemplate x:Key="RightPlayerSlotTemplate">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="{Binding Name}"
                           Foreground="#F1F7F6"
                           FontWeight="Bold"
                           Margin="0,0,0,6"
                           HorizontalAlignment="Center"/>
                <ContentPresenter Content="{Binding}"
                                  ContentTemplate="{StaticResource PlayerHandVerticalTemplate}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>

    
    <AdornerDecorator>
        
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        
        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Padding="12"
                Background="#123B3D"
                CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="#F1F7F6"
                           FontSize="14"
                           VerticalAlignment="Center"/>

                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Turn:"
                               Foreground="#CDE5E3"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentPlayerName}"
                               Foreground="#F1F7F6"
                               FontWeight="Bold"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Score:"
                               Foreground="#CDE5E3"
                               Margin="0,0,6,0"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentPlayerScore}"
                               Foreground="#F1F7F6"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                    <Button Width="36"
                            Height="28"
                            Margin="14,0,0,0"
                            ToolTip="Pause"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="Pause_Click">
                        <Grid>
                            <Rectangle Width="4" Height="14" Fill="#F1F7F6" RadiusX="1" RadiusY="1" HorizontalAlignment="Left" Margin="8,0,0,0"/>
                            <Rectangle Width="4" Height="14" Fill="#F1F7F6" RadiusX="1" RadiusY="1" HorizontalAlignment="Right" Margin="0,0,8,0"/>
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        
        <Border Grid.Row="1"
                Grid.Column="0"
                Margin="0,18,0,18"
                Background="#184B4E"
                CornerRadius="14"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                
                <ContentControl Grid.Row="0"
                                Grid.Column="1"
                                Content="{Binding TopPlayer}"
                                ContentTemplate="{StaticResource TopPlayerSlotTemplate}"/>

                
                <ContentControl Grid.Row="2"
                                Grid.Column="1"
                                Content="{Binding BottomPlayer}"
                                ContentTemplate="{StaticResource BottomPlayerSlotTemplate}"/>

                
                <ContentControl Grid.Row="1"
                                Grid.Column="0"
                                Content="{Binding LeftPlayer}"
                                ContentTemplate="{StaticResource LeftPlayerSlotTemplate}"/>

                
                <ContentControl Grid.Row="1"
                                Grid.Column="2"
                                Content="{Binding RightPlayer}"
                                ContentTemplate="{StaticResource RightPlayerSlotTemplate}"/>

                
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Background="#184B4E"
                        CornerRadius="12"
                        Padding="12"
                        Margin="10">
                    
                    <Grid x:Name="BoardArea"
                          Width="835"
                          Height="400">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Width" Value="835"/>
                                <Setter Property="Height" Value="400"/>
                                <Style.Triggers>
                                    
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding LeftPlayer}" Value="{x:Null}"/>
                                            <Condition Binding="{Binding RightPlayer}" Value="{x:Null}"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Height" Value="340"/>
                                    </MultiDataTrigger>
                                    
                                    <DataTrigger Binding="{Binding TopPlayer}" Value="{x:Null}">
                                        <Setter Property="Width" Value="780"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        
                        <Image Source="pack://application:,,,/Assets/Images/Board.png"
                               Stretch="UniformToFill"
                               Opacity="1"
                               Panel.ZIndex="0"/>

                        
                        <Grid Margin="24" Panel.ZIndex="1">
                            
                            <ItemsControl x:Name="BoardItems"
                                          ItemsSource="{Binding BoardDominoes}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ctrl:OShapePanel Padding="16" ItemSpacing="3"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ctrl:DominoTileControl/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            
                            <Canvas x:Name="BoardOverlay"
                                    Panel.ZIndex="2">
                                
                                <Border x:Name="DropLeftZone"
                                        Width="35"
                                        Height="70"
                                        Background="#123B3D"
                                        CornerRadius="8"
                                        Opacity="0.9"
                                        AllowDrop="True"
                                        DragOver="DropZone_DragOver"
                                        Drop="DropLeftZone_Drop">
                                    <TextBlock Text="Left"
                                               Foreground="#CDE5E3"
                                               FontSize="11"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <Border x:Name="DropRightZone"
                                        Width="35"
                                        Height="70"
                                        Background="#123B3D"
                                        CornerRadius="8"
                                        Opacity="0.9"
                                        AllowDrop="True"
                                        DragOver="DropZone_DragOver"
                                        Drop="DropRightZone_Drop">
                                    <TextBlock Text="Right"
                                               Foreground="#CDE5E3"
                                               FontSize="11"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Canvas>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

            
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Margin="16,18,0,18"
                    Background="#123B3D"
                    CornerRadius="12"
                    Padding="12">
                <StackPanel>
                    
                    <TextBlock Text="Scoreboard"
                               Foreground="#DFF3F1"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    
                    <ItemsControl ItemsSource="{Binding Players}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#F1F7F6"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="Foreground" Value="#F2D06B"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Score}"
                                               Foreground="#F2D06B"
                                               FontWeight="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </AdornerDecorator>
</UserControl>

