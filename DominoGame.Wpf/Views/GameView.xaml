<!-- UserControl: x:Class mengikat code-behind, xmlns/ xmlns:x untuk namespace XAML,
     xmlns:ctrl untuk custom control, Background warna latar,
     AllowDrop mengaktifkan drag-drop, PreviewDragOver handler drag. -->
<UserControl x:Class="DominoGame.Wpf.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:DominoGame.Wpf.Controls"
             Background="#0E2E2F"
             AllowDrop="True"
             PreviewDragOver="GameView_PreviewDragOver">

    <UserControl.Resources>
        <!-- DataTemplate: tile tangan horizontal. -->
        <DataTemplate x:Key="HandTileTemplateHorizontal">
            <Grid x:Name="TileRoot" Margin="3">
                <Grid x:Name="FaceUpRoot">
                    <ctrl:DominoTileControl/>
                </Grid>
                <Border x:Name="FaceDownRoot"
                        Width="35"
                        Height="70"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Background="#F1F7F6"
                        CornerRadius="4"/>
            </Grid>
            <DataTemplate.Triggers>
                <!-- DataTrigger: tampilkan face-up jika pemain aktif. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <!-- DataTrigger: tampilkan face-down jika bukan pemain aktif. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <!-- DataTrigger: tile tidak playable menjadi transparan. -->
                <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                    <Setter TargetName="TileRoot" Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- DataTemplate: ghost tile horizontal (selalu face-up). -->
        <DataTemplate x:Key="HandTileGhostHorizontal">
            <Grid Margin="3">
                <ctrl:DominoTileControl/>
            </Grid>
        </DataTemplate>

        <!-- DataTemplate: tile tangan vertikal. -->
        <DataTemplate x:Key="HandTileTemplateVertical">
            <Grid x:Name="TileRoot" Margin="3">
                <Grid.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Grid.LayoutTransform>
                <Grid x:Name="FaceUpRoot">
                    <ctrl:DominoTileControl/>
                </Grid>
                <Border x:Name="FaceDownRoot"
                        Width="35"
                        Height="70"
                        BorderThickness="2"
                        BorderBrush="Black"
                        Background="#F1F7F6"
                        CornerRadius="4"/>
            </Grid>
            <DataTemplate.Triggers>
                <!-- DataTrigger: tampilkan face-up jika pemain aktif. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="True">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Visible"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
                <!-- DataTrigger: tampilkan face-down jika bukan pemain aktif. -->
                <DataTrigger Binding="{Binding DataContext.IsCurrent, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Value="False">
                    <Setter TargetName="FaceUpRoot" Property="Visibility" Value="Collapsed"/>
                    <Setter TargetName="FaceDownRoot" Property="Visibility" Value="Visible"/>
                </DataTrigger>
                <!-- DataTrigger: tile tidak playable menjadi transparan. -->
                <DataTrigger Binding="{Binding IsPlayable}" Value="False">
                    <Setter TargetName="TileRoot" Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- DataTemplate: ghost tile vertikal (selalu face-up). -->
        <DataTemplate x:Key="HandTileGhostVertical">
            <Grid Margin="3">
                <Grid.LayoutTransform>
                    <RotateTransform Angle="90"/>
                </Grid.LayoutTransform>
                <ctrl:DominoTileControl/>
            </Grid>
        </DataTemplate>

        <!-- DataTemplate: tangan pemain horizontal. -->
        <DataTemplate x:Key="PlayerHandHorizontalTemplate">
            <ItemsControl ItemsSource="{Binding Hand}"
                          ItemTemplate="{StaticResource HandTileTemplateHorizontal}"
                          PreviewMouseLeftButtonDown="HandItems_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="HandItems_PreviewMouseMove">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>

        <!-- DataTemplate: tangan pemain vertikal. -->
        <DataTemplate x:Key="PlayerHandVerticalTemplate">
            <ItemsControl ItemsSource="{Binding Hand}"
                          ItemTemplate="{StaticResource HandTileTemplateVertical}"
                          PreviewMouseLeftButtonDown="HandItems_PreviewMouseLeftButtonDown"
                          PreviewMouseMove="HandItems_PreviewMouseMove">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>
    </UserControl.Resources>

    <!-- AdornerDecorator: memungkinkan adorner untuk drag preview. -->
    <AdornerDecorator>
        <!-- Grid: layout utama game. -->
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

        <!-- Border: banner status atas. -->
        <Border Grid.Row="0"
                Grid.ColumnSpan="2"
                Padding="12"
                Background="#123B3D"
                CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TextBlock: pesan status. -->
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="#F1F7F6"
                           FontSize="14"
                           VerticalAlignment="Center"/>

                <!-- StackPanel: info giliran dan skor. -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Turn:"
                               Foreground="#CDE5E3"
                               Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding CurrentPlayerName}"
                               Foreground="#F1F7F6"
                               FontWeight="Bold"
                               Margin="0,0,12,0"/>
                    <TextBlock Text="Score:"
                               Foreground="#CDE5E3"
                               Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding CurrentPlayerScore}"
                               Foreground="#F1F7F6"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Border: area permainan utama. -->
        <Border Grid.Row="1"
                Grid.Column="0"
                Margin="0,18,0,18"
                Background="#184B4E"
                CornerRadius="14"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- ContentControl: tangan pemain atas. -->
                <ContentControl Grid.Row="0"
                                Grid.Column="1"
                                Content="{Binding TopPlayer}"
                                ContentTemplate="{StaticResource PlayerHandHorizontalTemplate}"/>

                <!-- ContentControl: tangan pemain bawah. -->
                <ContentControl Grid.Row="2"
                                Grid.Column="1"
                                Content="{Binding BottomPlayer}"
                                ContentTemplate="{StaticResource PlayerHandHorizontalTemplate}"/>

                <!-- ContentControl: tangan pemain kiri. -->
                <ContentControl Grid.Row="1"
                                Grid.Column="0"
                                Content="{Binding LeftPlayer}"
                                ContentTemplate="{StaticResource PlayerHandVerticalTemplate}"/>

                <!-- ContentControl: tangan pemain kanan. -->
                <ContentControl Grid.Row="1"
                                Grid.Column="2"
                                Content="{Binding RightPlayer}"
                                ContentTemplate="{StaticResource PlayerHandVerticalTemplate}"/>

                <!-- Border: area board. -->
                <Border Grid.Row="1"
                        Grid.Column="1"
                        Background="#184B4E"
                        CornerRadius="12"
                        Padding="12"
                        Margin="10">
                    <!-- Grid: area board untuk ItemsControl dan drop zones. -->
                    <Grid x:Name="BoardArea"
                          Width="835"
                          Height="400">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Width" Value="835"/>
                                <Setter Property="Height" Value="400"/>
                                <Style.Triggers>
                                    <!-- 2 pemain: tidak ada kiri/kanan, kecilkan tinggi agar tidak kepotong bawah. -->
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding LeftPlayer}" Value="{x:Null}"/>
                                            <Condition Binding="{Binding RightPlayer}" Value="{x:Null}"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Height" Value="340"/>
                                    </MultiDataTrigger>
                                    <!-- 3 pemain: tidak ada atas, kecilkan lebar agar tidak kepotong kanan. -->
                                    <DataTrigger Binding="{Binding TopPlayer}" Value="{x:Null}">
                                        <Setter Property="Width" Value="780"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <!-- Image: background board. -->
                        <Image Source="pack://application:,,,/Assets/Images/Board.png"
                               Stretch="UniformToFill"
                               Opacity="1"
                               Panel.ZIndex="0"/>

                        <!-- Grid: area permainan di atas meja (padding dari tepi). -->
                        <Grid Margin="24" Panel.ZIndex="1">
                            <!-- ItemsControl: domino di board. -->
                            <ItemsControl x:Name="BoardItems"
                                          ItemsSource="{Binding BoardDominoes}"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ctrl:OShapePanel Padding="16" ItemSpacing="3"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <ctrl:DominoTileControl/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <!-- Canvas: overlay untuk drop zones kiri/kanan. -->
                            <Canvas x:Name="BoardOverlay"
                                    Panel.ZIndex="2">
                                <!-- Border: drop zone kiri. -->
                                <Border x:Name="DropLeftZone"
                                        Width="35"
                                        Height="70"
                                        Background="#123B3D"
                                        CornerRadius="8"
                                        Opacity="0.9"
                                        AllowDrop="True"
                                        DragOver="DropZone_DragOver"
                                        Drop="DropLeftZone_Drop">
                                    <TextBlock Text="Left"
                                               Foreground="#CDE5E3"
                                               FontSize="11"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <!-- Border: drop zone kanan. -->
                                <Border x:Name="DropRightZone"
                                        Width="35"
                                        Height="70"
                                        Background="#123B3D"
                                        CornerRadius="8"
                                        Opacity="0.9"
                                        AllowDrop="True"
                                        DragOver="DropZone_DragOver"
                                        Drop="DropRightZone_Drop">
                                    <TextBlock Text="Right"
                                               Foreground="#CDE5E3"
                                               FontSize="11"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Canvas>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>

            <!-- Border: panel scoreboard. -->
            <Border Grid.Row="1"
                    Grid.Column="1"
                    Margin="16,18,0,18"
                    Background="#123B3D"
                    CornerRadius="12"
                    Padding="12">
                <StackPanel>
                    <!-- TextBlock: label scoreboard. -->
                    <TextBlock Text="Scoreboard"
                               Foreground="#DFF3F1"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <!-- ItemsControl: binding daftar pemain untuk skor. -->
                    <ItemsControl ItemsSource="{Binding Players}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#F1F7F6"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                                        <Setter Property="Foreground" Value="#F2D06B"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding Score}"
                                               Foreground="#F2D06B"
                                               FontWeight="Bold"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </AdornerDecorator>
</UserControl>
