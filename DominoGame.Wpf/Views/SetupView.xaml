<!-- UserControl: x:Class mengikat code-behind, xmlns/ xmlns:x untuk namespace XAML,
     Background warna latar view. -->
<UserControl x:Class="DominoGame.Wpf.Views.SetupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0E2E2F">

    <!-- Grid: Margin memberi ruang di sekeliling konten. -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- RowDefinition: header. -->
            <RowDefinition Height="Auto"/>
            <!-- RowDefinition: area input. -->
            <RowDefinition Height="*"/>
            <!-- RowDefinition: footer tombol. -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- StackPanel: header teks. -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <!-- TextBlock: judul. -->
            <TextBlock Text="Domino Game"
                       Foreground="#F1F7F6"
                       FontSize="22"
                       FontWeight="Bold"/>
            <!-- TextBlock: deskripsi. -->
            <TextBlock Text="Pilih target skor dan jumlah pemain, kemudian isi nama pemain."
                       Foreground="#CDE5E3"
                       Margin="0,6,0,0"/>
        </StackPanel>

        <!-- Border: panel input utama. -->
        <Border Grid.Row="1"
                Background="#123B3D"
                CornerRadius="12"
                Padding="12">
            <StackPanel>
                <!-- Grid: area pilihan skor dan jumlah pemain. -->
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <!-- ColumnDefinition: kolom kiri. -->
                        <ColumnDefinition Width="*"/>
                        <!-- ColumnDefinition: kolom kanan. -->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- StackPanel: pilihan target skor. -->
                    <StackPanel Margin="0,0,8,0">
                        <!-- TextBlock: label target skor. -->
                        <TextBlock Text="Target skor"
                                   Foreground="#DFF3F1"
                                   Margin="0,0,0,6"/>
                        <!-- ComboBox: x:Name dipakai code-behind. -->
                        <ComboBox x:Name="ScoreTargetCombo"
                                  SelectedIndex="1"
                                  Width="140"
                                  Style="{StaticResource InputComboBoxStyle}">
                            <ComboBoxItem Content="50"/>
                            <ComboBoxItem Content="100"/>
                            <ComboBoxItem Content="150"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- StackPanel: pilihan jumlah pemain. -->
                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                        <!-- TextBlock: label jumlah pemain. -->
                        <TextBlock Text="Jumlah pemain"
                                   Foreground="#DFF3F1"
                                   Margin="0,0,0,6"/>
                        <!-- ComboBox: x:Name dipakai code-behind. -->
                        <ComboBox x:Name="PlayerCountCombo"
                                  SelectedIndex="0"
                                  Width="140"
                                  Style="{StaticResource InputComboBoxStyle}">
                            <ComboBoxItem Content="2"/>
                            <ComboBoxItem Content="3"/>
                            <ComboBoxItem Content="4"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>

                <!-- TextBlock: label nama pemain. -->
                <TextBlock Text="Nama pemain"
                           Foreground="#DFF3F1"
                           Margin="0,0,0,6"/>

                <!-- StackPanel: container textbox nama pemain. -->
                <StackPanel x:Name="PlayersPanel"/>
            </StackPanel>
        </Border>

        <!-- StackPanel: tombol aksi. -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <!-- Button: batalkan setup. -->
            <Button Content="Cancel"
                    Width="90"
                    Height="44"
                    Margin="0,0,8,0"
                    Padding="10,6"
                    Style="{StaticResource DangerButtonStyle}"
                    Click="Cancel_Click"/>
            <!-- Button: mulai game. -->
            <Button Content="Start Game"
                    Width="120"
                    Height="44"
                    Padding="10,6"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="Start_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
