
<UserControl x:Class="DominoGame.Wpf.Views.StartMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#0E2E2F">
    
    <Grid>
        
        <Border Width="520"
                Padding="26"
                Background="#123B3D"
                CornerRadius="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel>
                
                <TextBlock Text="Domino Game"
                           Foreground="#F1F7F6"
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                
                <TextBlock Text="Mulai permainan atau atur pemain dulu."
                           Foreground="#CDE5E3"
                           Margin="0,8,0,20"
                           HorizontalAlignment="Center"/>

                
                <Button Content="Start Game"
                        Height="42"
                        Margin="0,0,0,10"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="Start_Click"/>
                
                <Button Content="Exit"
                        Height="42"
                        Style="{StaticResource DangerButtonStyle}"
                        Click="Exit_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

